
// Добавить кнопку для извлечения
let btn = document.createElement('button');
btn.innerText = 'Показать HTML из localStorage';
btn.onclick = () => {
  localStorage.setItem('pageHTML', document.documentElement.outerHTML);
  let textarea = document.createElement('textarea');
  textarea.value = localStorage.getItem('pageHTML');
  textarea.style.width = '100%';
  textarea.style.height = '80vh';
  document.body.prepend(textarea);
};
document.body.prepend(btn);
